# Flask
FLASK_ENV=development
SECRET_KEY=change-me
JWT_SECRET_KEY=change-me-jwt

# Postgres (used if DATABASE_URL is not set)
POSTGRES_DB=flaskdb
POSTGRES_USER=flaskuser
POSTGRES_PASSWORD=flaskpass
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Optional: Direct SQLAlchemy URL (overrides POSTGRES_* if set)
# DATABASE_URL=postgresql+psycopg2://flaskuser:flaskpass@db:5432/flaskdb

# OAuth (optional; leave blank to disable)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_REDIRECT_URI=http://localhost:8000/oauth/callback/google